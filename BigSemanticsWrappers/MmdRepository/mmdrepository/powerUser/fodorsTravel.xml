<meta_metadata_repository name="fordors_travel"
  package="ecologylab.bigsemantics.generated.library.fodorstravel" default_user_agent_name="chrome">
  
  <meta_metadata name="fodors_attraction" type="attraction" parser="xpath"
    comment="Fodor travel suggestions">
    <selector url_regex_fragment="review-\d+" domain="fodors.com" />
    <exampleURL url="http://www.fodors.com/world/europe/italy/rome/review-90077.html" />
    <scalar name="title">
      <xpath>/body/head/title</xpath>
    </scalar>
    <collection name="main_images">
      <xpath>//div[@class='slide-image-details']</xpath>
      <scalar name="location">
        <xpath>./img/@src</xpath>
      </scalar>
    </collection>
    <scalar name="description">
      <xpath>//meta[@itemprop='description']/@content</xpath> 											
    </scalar>
	<composite name="attraction_address">
	  <xpath>//span[@itemprop='address']</xpath> 
	  <scalar name="street_address"> 
	    <xpath>.</xpath>
	  </scalar>
	  <scalar name="location">
        <concatenate_values>
          <value>http://maps.google.com/maps?q=</value>
          <value from_scalar="street_address" />
        </concatenate_values>
      </scalar>	  
	</composite>
    <scalar name="fee">
      <xpath>//li[@class='cost']</xpath>
    </scalar>
    <scalar name="open_hours">
      <xpath>//li[@class='hours']</xpath>
    </scalar>
    <scalar name="phone_number">
      <xpath>//span[@itemprop='telephone']</xpath>
    </scalar>
    <scalar name="attraction_website">
      <xpath>//li[@class='website']/a/@href</xpath>														
    </scalar>
    <collection name="reviews">																	
      <xpath>//ul[@class='member-reviews']/li</xpath>
      <scalar name="title">
        <xpath>.//p[1]</xpath>
      </scalar>
      <scalar name="description">
        <xpath>.//p[2]</xpath>
      </scalar>
    </collection>
    <scalar name="attractions_in_the_area">
      <xpath>//li[@class='location']/span[2]/a/@href</xpath>
    </scalar>
    
  </meta_metadata>
  
  <meta_metadata name="fodors_attractions" type="attraction_list" parser="xpath"
    comment="Fodor travel suggestions">
    
    <selector url_regex_fragment="nam_loc:\d+" domain="fodors.com">
    </selector>
    <exampleURL url="http://www.fodors.com/world/australia-and-the-pacific/australia/new-south-wales/sydney/sights-nam_loc:709123.html" />
    <scalar name="title">
    	<xpath>//head/title</xpath>
    </scalar>
    <collection name="attractions">
      <xpath>//table[@class='sightslist']//tr</xpath>
      <scalar name="title">
        <xpath>./td[1]/a</xpath>
      </scalar>
      <scalar name="location">
        <xpath>./td[1]/a/@href</xpath>
      </scalar>
      <scalar name="description">
        <xpath>./td[2]/span</xpath>
      </scalar>
    </collection>
  
  </meta_metadata>
  
</meta_metadata_repository>