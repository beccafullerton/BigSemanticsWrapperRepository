<meta_metadata_repository name="fordors_travel"
  package="ecologylab.bigsemantics.generated.library.tripAdvisor" default_user_agent_name="chrome">
  
  <meta_metadata name="fordors" type="attraction" parser="xpath"
    comment="Trip advisor travel suggestions">
    <selector url_regex_fragment="http://www.fodors.com/world" domain="fodors.com" />
    <exampleURL url="http://www.fodors.com/world/europe/italy/rome/review-90077.html" />
    <scalar name="title">
      <xpath>//head/title</xpath>
    </scalar>
    <composite name="image">
      <scalar name="location">
        <xpath>//div[@id='slides']/div[1]/div[1]/img/@src</xpath>
      </scalar>
    </composite>
    <scalar name="description">
      <xpath>//meta[@itemprop='description']/@content</xpath> 											
    </scalar>
	<composite name="attraction_address">
	  <xpath>//span[@itemprop='address']</xpath> 
	  <scalar name="street_address"> 
	    <xpath>.</xpath>
	  </scalar>
	  <scalar name="location">
        <concatenate_values>
          <value>http://maps.google.com/maps?q=</value>
          <value from_scalar="street_address" />
        </concatenate_values>
      </scalar>	  
	</composite>
    <scalar name="fee">
      <xpath>//li[@class='cost']</xpath>
    </scalar>
    <scalar name="open_hours">
      <xpath>//li[@class='hours']</xpath>
    </scalar>
    <scalar name="phone_number">
      <xpath>//span[@itemprop='telephone']</xpath>
    </scalar>
    <scalar name="attraction_website">
      <xpath>//li[@class='website']/a/@href</xpath>														<!-- href or no? -->
    </scalar>
    <collection name="reviews">																	
      <xpath>//ul[@class='member-reviews']/li</xpath>
      <scalar name="title">
        <xpath>.//p[1]</xpath>
      </scalar>
      <scalar name="description">
        <xpath>.//p[2]</xpath>
      </scalar>
    </collection>
    <scalar name="attractions_in_the_area">
      <xpath>//li[@class='location']/span[2]/a/@href</xpath>
    </scalar>
  </meta_metadata>
  
</meta_metadata_repository>