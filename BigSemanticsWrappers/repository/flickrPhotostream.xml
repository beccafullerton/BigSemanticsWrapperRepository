<meta_metadata_repository name="flickrPhotostream"
  package="ecologylab.bigsemantics.generated.library">


  <meta_metadata name="photostream" extends="rich_document" comment="All flickr photos of a particular user"
    parser="xpath">
    
    <selector url_regex="https://www.flickr.com/photos/[A-z0-9_@-]+/$" domain="flickr.com" />
    
    <example_url url="https://www.flickr.com/photos/kali-kold/" />
    
    <collection name="stream" comment="Collection of all images of a user" child_type="flickr_photo">
      <xpath>//div[@class='interaction-bar']/div[@class='text']/a[@class='title']</xpath>
      <scalar name="title">
        <xpath>./text()</xpath>
      </scalar>
      <scalar name="location">
        <xpath>./@href</xpath>
      </scalar>
    </collection>
  </meta_metadata>
  
</meta_metadata_repository>