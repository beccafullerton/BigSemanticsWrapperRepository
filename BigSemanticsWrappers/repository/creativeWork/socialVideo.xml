<meta_metadata_repository name="video"
  package="ecologylab.bigsemantics.generated.library.creativeWork">

  <meta_metadata name="social_video" extends="creative_work" parser="xpath">
    <scalar name="upload_date" scalar_type="String" comment="Date on which video is uploaded" />
    <scalar name="license" scalar_type="String" comment="video License" />
    <scalar name="pic" scalar_type="ParsedURL" />
    <collection name="thumbnails" child_type="image" comment="collection of thumbnails" />
    <collection name="tag" child_type="document" comment="list of tags" />

    <collection name="top_comments" child_type="comment" comment="Top 2 comments if any" />
    <scalar name="number_of_comments" scalar_type="Int" comment="Total number of comments received" />
    <scalar name="likes" scalar_type="String" comment="Total number of likes recived" />
    <scalar name="dislikes" scalar_type="String" comment="Total number of dislikes received" />
    <scalar name="view_count" scalar_type="String" comment="Total number of views" />
  </meta_metadata>
</meta_metadata_repository>