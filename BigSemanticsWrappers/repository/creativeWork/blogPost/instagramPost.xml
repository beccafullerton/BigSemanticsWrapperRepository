<meta_metadata_repository name="instagramPost"
  package="ecologylab.bigsemantics.generated.library.creativeWork.blogPost">

  <meta_metadata name="instagram_post" extends="social_media_post" parser="xpath" no_cache="true">
    <selector url_regex="https://instagram.com/p/[^/]*/(\?taken-by=.*)?(\?tagged=.*)?" domain="instagram.com"/>
    <example_url url="https://instagram.com/p/86fyx5hQZa/?taken-by=instagram" />
    <example_url url="https://instagram.com/p/86vFSEoVdh/?taken-by=natgeo" />
    <example_url url="https://instagram.com/p/9Hg7humxKd/?tagged=riseup" />
        
  	<scalar name="title" hide="true"/>
  	<collection name="main_images" hide="true" />
  	
  	<composite name="shared" use_value_as_label="shared.photo" layer="10.0">
  		<xpath>//div[@class='-cx-PRIVATE-Post__ownerAndLocation']</xpath>
  		<scalar name="title" hide_label="true" navigates_to="location">
  			<xpath>.</xpath>
  		</scalar>
  		<scalar name="location">
  			<xpath>./@href</xpath>
  		</scalar>
  		<composite name="photo" hide_label="true">
  			<scalar name="location">
  				<xpath>//img[@class='-cx-PRIVATE-Post__ownerAvatar']/@src</xpath>
  			</scalar>
  		</composite>
  	</composite>
  	
  	<collection name="photos" hide_label="true" layer="9.5"
  										child_style_name="ecologylab-fieldValueContainerInstagramPostImage">
  		<xpath>//div[@class='-cx-PRIVATE-Photo__root -cx-PRIVATE-Post__media']//img</xpath>
  		<xpath>//meta[@property='og:image']</xpath>
  		<scalar name="location">
			<xpath>./@src</xpath>
			<xpath>./@content</xpath>
		</scalar>
  	</collection>
  	
  	<scalar name="description" label="description">
  		<xpath>//li[@class='-cx-PRIVATE-PostInfo__comment'][1]/h1</xpath>
  	</scalar>
  	
  	<scalar name="date">
  		<xpath>//time[@class='-cx-PRIVATE-Timestamp__root']/@title</xpath>
  	</scalar>
  	
  	<collection name="up_votes" label="likes" child_scalar_type="String">
  		<xpath>//span[@class='-cx-PRIVATE-PostLikers__likeCount']/span[2]</xpath>
  	</collection>
  	  	
  	<collection name="comments" child_show_expanded_always="true">
		<xpath>//li[@class='-cx-PRIVATE-PostInfo__comment'][position() > 2]</xpath>
		<scalar name="title" hide="true"/>
		<composite name="shared" label="user" layer="10.0">
			<xpath>./a</xpath>
			<scalar name="title">
				<xpath>.</xpath>
			</scalar>
			<scalar name="location">
				<xpath>./@href</xpath>
			</scalar>
		</composite>
		<scalar name="description" label="comment">
			<xpath>./span/span</xpath>
			<xpath>./span/a</xpath>
		</scalar>	
  	</collection>
  	 
  </meta_metadata>
 </meta_metadata_repository>